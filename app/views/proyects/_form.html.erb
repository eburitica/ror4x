<%= simple_form_for @proyect, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@proyect[:name]) %>
  <%= f.input :description %>
  <%= error_span(@proyect[:description]) %>
  <%= f.input :begindate %>
  <%= error_span(@proyect[:begindate]) %>
  <%= f.input :enddate %>
  <%= error_span(@proyect[:enddate]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                proyects_path, :class => 'btn btn-default' %>
<% end %>
